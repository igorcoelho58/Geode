{
    // Configurações de arquivos e busca
    "files.watcherExclude": {
        "**/target": true,
        "**/public": true,
        "**/resources": true,
        "**/node_modules": true,
        "**/.git/objects/**": true,
        "**/.hugo_build_lock": true,
        "**/.venv": true,
        "**/dossies_backup": true
    },
    "search.exclude": {
        "**/public": true,
        "**/resources": true,
        "**/node_modules": true,
        "**/.venv": true,
        "**/dossies_backup": true
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true
    },

    // Configurações de editor
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": false,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.python",

    // Python
    "python.defaultInterpreterPath": ".venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },

    // Hugo
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },

    // YAML
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    }
}
